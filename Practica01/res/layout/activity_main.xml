<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upc.practica01.MainActivity" >
    
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >
 
 
        <EditText
            android:id="@+id/correoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:text="micorreo@micorreo.com"
            android:textColor="#FFBF75"
            android:hint="@string/lbl_usuario"
            android:inputType="textEmailAddress"
            android:paddingTop="55dp" />
 
        <EditText
            android:id="@+id/claveUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123456"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:textColor="#FFBF75"
            android:hint="@string/lbl_password"
            android:inputType="textPassword"
            android:paddingEnd="55dp" />
 
        <View
            android:layout_width="fill_parent"
            android:layout_height="30dp" >
        </View>
 
        <Button
            android:id="@+id/btningreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#E4F9FC"
            android:paddingEnd="50dp"
            android:text="@string/lbl_boton_login"
            android:textAlignment="center"
            android:textColor="#544409" />
 
        <View
            android:layout_width="fill_parent"
            android:layout_height="60dp" >
        </View>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_usuario" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text="@string/lbl_password" />

</RelativeLayout>